<%= render partial: "shared/error_list", locals: {new_object: @song} %>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <%= f.label :holiday, "Holiday?" %>
    <%= f.check_box :holiday, :checked => @song.id ? @song.holiday? : false %>
    <%= f.label :active, "Active?" %>
    <%= f.check_box :active, :checked => @song.id ? @song.active? : true %>
    <%= f.submit %>
<% end %>